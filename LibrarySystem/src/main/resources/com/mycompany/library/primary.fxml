                  <padding>
                     <Insets bottom="12.0" top="12.0" />
                  </padding>
               </Button>
            </VBox>

            <Separator opacity="0.1">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Separator>

            <VBox spacing="10.0">
               <Label text="LOAN SYSTEM" textFill="#EEEEEE">
                  <font>
                     <Font name="System Bold" size="11.0" />
                  </font>
               </Label>
               
               <ComboBox fx:id="cmbBorrowBook" maxWidth="Infinity" promptText="Select Book..." 
