               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="txtSearch" promptText="ðŸ” Search inventory..." style="-fx-background-color: #222831; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 8;" HBox.hgrow="ALWAYS" />
                  
